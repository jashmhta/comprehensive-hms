# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database Configuration
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_db
DB_USER=hms_user
DB_PASSWORD=hms_password

# MongoDB
MONGODB_URI=mongodb://localhost:27017/hospital_docs

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_here

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@hospital.com
FROM_NAME=Hospital Management System

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_TOKEN=your_whatsapp_token

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# AWS Configuration (for file storage and backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=hms-files
S3_BACKUP_BUCKET=hms-backups

# Payment Gateway Configuration
# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Google Services
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Firebase Configuration (for mobile push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# External API Keys
# Lab Integration
LAB_API_URL=https://api.labpartner.com
LAB_API_KEY=your_lab_api_key

# Radiology Integration
RADIOLOGY_API_URL=https://api.radiologypartner.com
RADIOLOGY_API_KEY=your_radiology_api_key

# Insurance API
INSURANCE_API_URL=https://api.insurancepartner.com
INSURANCE_API_KEY=your_insurance_api_key

# Drug Database API
DRUG_API_URL=https://api.drugdatabase.com
DRUG_API_KEY=your_drug_api_key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Biometric Integration
BIOMETRIC_API_URL=https://api.biometric.com
BIOMETRIC_API_KEY=your_biometric_api_key

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for medical records
HIPAA_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true

# Client Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_RAZORPAY_KEY_ID=your_razorpay_key_id
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Mobile App Configuration
REACT_NATIVE_API_URL=http://10.0.2.2:5000/api  # Android emulator
REACT_NATIVE_SOCKET_URL=http://10.0.2.2:5000
REACT_NATIVE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Development Tools
DEBUG=true
MOCK_EXTERNAL_APIS=false
ENABLE_API_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
DATADOG_API_KEY=your_datadog_api_key

# Security
HELMET_ENABLED=true
CSRF_PROTECTION=true
XSS_PROTECTION=true
CONTENT_SECURITY_POLICY=true

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=100MB

# Queue Configuration (for background jobs)
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=30000

# Multi-tenancy (if supporting multiple hospitals)
MULTI_TENANT=false
DEFAULT_TENANT=main_hospital

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,es,fr

# Time Zone
DEFAULT_TIMEZONE=Asia/Kolkata

# Feature Flags
ENABLE_TELEMEDICINE=true
ENABLE_AI_DIAGNOSIS=false
ENABLE_BLOCKCHAIN_RECORDS=false
ENABLE_IOT_INTEGRATION=true